from django.db import models

class Product(models.Model):
    id = models.PositiveIntegerField(primary_key=True, max_length=10)
    price = models.DecimalField(max_digits=6, decimal_places=2, min_value=0)
    name = models.CharField(max_length=255)
    description = models.TextField()

class Images(models.Model):
    id = models.ForeignKey(Product, on_delete=models.CASCADE)
    image = models.CharField(max_length=255)

class CPUs(models.Model):
    id = models.ForeignKey(Product, on_delete=models.CASCADE)
    coreCount = models.PositiveIntegerField()
    performanceGHz = models.DecimalField(max_digits=6, decimal_places=2, min_value=0)
    perfBoostGHz = models.DecimalField(max_digits=6, decimal_places=2, min_value=0)
    microArch = models.CharField(max_length=255)
    integratedGraphics = models.CharField(max_length=255)
    integratedHeatSpreader = models.CharField(max_length=255)
    siliconType = models.CharField(max_length=255)
    substrate = models.CharField(max_length=255)
